{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noResolve": false,
    "module": "commonjs",
    "target": "es5",
    "outDir": "dist",
    "lib": ["dom", "es5", "es2015"]
  },
  "typedocOptions": {
    "name": "MediaFire JavaScript SDK",
    "theme": "minimal",
    "mode": "file",
    "out": "docs",
    "toc": [
      "Device",
      "Download",
      "File",
      "Folder",
      "System",
      "User"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}