{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "noResolve": false,
    "module": "commonjs",
    "target": "es5",
    "outDir": "pkg",
    "lib": ["dom", "es5", "es2015"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "pkg",
    "node_modules"
  ]
}